                      <% end %>
                      <%= link_to dislike_pick_path(pick), method: :put, class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-chevron-down">
                        Downvote
                        <%= pick.get_downvotes.size %>
                      <% end %>
                     </div>
    
                    <%= content_tag(:div, class: 'text-center') do %>
                      <%= link_to 'Show', pick %>
                      <% if pick.user == current_user %>
                      <%= link_to 'Edit', edit_pick_path(pick) %>
                      <%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %>
                      <% end %>
                    <%end%>
                    </br>
                    </br>
                    </br>
                <% end %>
                  </br>
                  </br>
                  </br>
              <% end %>
  
        <% else %>
           <%= link_to "Create your profile", new_user_profile_path(current_user) if current_user %>
