<h1>Listing picks</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Player</th>
      <th>Idea</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @picks.each do |pick| %>
      <tr>
        <td><%= pick.category.team %></td>
        <td><%= pick.player %></td>
        <td><%= pick.idea %></td>
        <td><%= link_to 'Show', pick %></td>
        <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
        <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pick', new_pick_path %>
