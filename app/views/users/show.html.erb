<div class="row">
    <div class="col-md-3 text-center">
        
        <%= image_tag @user.profile.avatar.url %>
        <h1><%= @user.profile.user_name %></h1>
        <% if current_user.profile %>
            <%= link_to "Edit Profile", edit_user_profile_path(current_user) %>
        <% end %>
    </div>
    <div class="col-md-5 well">
        <h3>Location:</h3>
        <h4><%= @user.profile.location %></h4>
        <h3>Favorite Team:</h3>
        <h4><%= @user.profile.favorite_team %></h4>
        <h3> Bio: </h3>
        <h4><%= @user.profile.description %></h4>
        <h3> Drafting Strategy: </h3>
        <h4><%= @user.profile.strategy %></h4>
    </div>
</div>
